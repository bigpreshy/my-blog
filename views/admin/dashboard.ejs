<div class="admin-title">
    <h2>Posts</h2>
    <a href="/admin/add-post" class="button">+ Add New</a>
  </div>
  
  <ul class="admin-posts">
  
    <% posts.forEach(post => { %>
     
      <li>
        <a href="/article/<%= post.slug %>">
          <%= post.title %> &nearr;
        </a>
        <div class="admin-post-controls">
          <a href="/admin/edit-post/<%= post.slug %>" class="btn">Edit</a>
  
          <form action="/delete-post/<%= post.slug %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn-delete btn">
          </form>
  
        </div>
  
      </li>
  
    <% }) %>
  </ul>